<% include partials/header %>
<div class="container">
    <h1>Add New Post</h1>
    <div class="row">
        <div class="col-md-6 img-thumbnail">
            <form action="/blog" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="Blog Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" placeholder="Blog Image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[body]" placeholder="Blog Content">
                </div>
                <button class="btn  btn-sm btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include partials/footer %>
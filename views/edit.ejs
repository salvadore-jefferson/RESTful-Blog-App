<% include partials/header %>
<div class="container">
    <h1>Edit Post</h1>
    <div class="row">
        <div class="col-md-6 img-thumbnail">
            <form action="/blog/<%=blog._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[body]" value="<%= blog.body %>">
                </div>
                <button class="btn  btn-sm btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include partials/footer %>
